<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="135dp"
    tools:context="huecomundo.muhich.fireworks_prime.up_hand_5_fragment">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivUpHandC"
        android:src="@drawable/card_back"
        android:clickable="true"
        android:onClick="giveClueActionB"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivUpHandD"
        android:src="@drawable/card_back"
        android:clickable="true"
        android:onClick="giveClueActionB"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ivUpHandC" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivUpHandB"
        android:src="@drawable/card_back"
        android:clickable="true"
        android:onClick="giveClueActionB"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/ivUpHandC" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivUpHandA"
        android:src="@drawable/card_back"
        android:clickable="true"
        android:onClick="giveClueActionB"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/ivUpHandB"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivUpHandE"
        android:src="@drawable/card_back"
        android:clickable="true"
        android:onClick="giveClueActionB"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ivUpHandD"
        android:layout_marginLeft="10dp" />
</RelativeLayout>
