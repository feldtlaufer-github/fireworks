<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="huecomundo.muhich.fireworks_prime.GameMaker"
    android:background="#36454f">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbPlayerA"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="100dp"
        android:textSize="45dp"
        android:checked="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPlayerA"
        android:hint="Player Name"
        android:textSize="45dp"
        android:width="400dp"
        android:layout_alignTop="@+id/cbPlayerA"
        android:layout_toEndOf="@+id/cbPlayerA"
        android:layout_marginLeft="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbPlayerB"
        android:textSize="45dp"
        android:layout_below="@+id/cbPlayerA"
        android:layout_toStartOf="@+id/etPlayerA"
        android:checked="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbPlayerC"
        android:textSize="45dp"
        android:checked="false"
        android:layout_below="@+id/cbPlayerB"
        android:layout_alignStart="@+id/cbPlayerB" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbPlayerD"
        android:textSize="45dp"
        android:layout_below="@+id/cbPlayerC"
        android:layout_toStartOf="@+id/etPlayerA"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbPlayerE"
        android:textSize="45dp"
        android:layout_below="@+id/cbPlayerD"
        android:layout_toStartOf="@+id/etPlayerA"
        android:checked="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPlayerB"
        android:hint="Player Name"
        android:textSize="45dp"
        android:width="400dp"
        android:layout_below="@+id/cbPlayerA"
        android:layout_alignStart="@+id/etPlayerA" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPlayerC"
        android:hint="Player Name"
        android:textSize="45dp"
        android:width="400dp"
        android:layout_alignTop="@+id/cbPlayerC"
        android:layout_alignStart="@+id/etPlayerB" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPlayerD"
        android:hint="Player Name"
        android:textSize="45dp"
        android:width="400dp"
        android:layout_below="@+id/cbPlayerC"
        android:layout_alignStart="@+id/etPlayerC" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPlayerE"
        android:hint="Player Name"
        android:textSize="45dp"
        android:width="400dp"
        android:layout_below="@+id/cbPlayerD"
        android:layout_alignStart="@+id/etPlayerD" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Play"
        android:id="@+id/btnPlay"
        android:layout_below="@+id/cbPlayerB"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="54dp"
        android:textSize="40dp"
        android:onClick="createGame" />

</RelativeLayout>
